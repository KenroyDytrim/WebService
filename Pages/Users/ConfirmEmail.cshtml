@page
@model Web2.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Подтверждение пользователя";
}

<head>
    <link rel="stylesheet" href="~/css/Windows.css" asp-append-version="true" />
</head>

<bode>
    <div class="parent">
<div class="block" style="height:250px;">

            <dl class="row" style="height: 10em; margin: 0; position: absolute; top: 40%; transform: translate(0%, -50%);">
            <dt class="col-sm-10">
                Имя
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Name)
            </dd>
            <dt class="col-sm-10">
                Фамилия
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Surname)
            </dd>
            <dt class="col-sm-10">
                Номер телефона
            </dt>
            <dd class="col-sm-5">
                @Html.DisplayFor(model => model.user.Phone)
            </dd>
        </dl>
		</div>
        <div style="padding:10px">
            <form method="post">
                <input type="hidden" name="Uid" value="@Model.Uid" />
                <input type="hidden" name="codeT" value="@Model.codeT" />
                <input value="Потвердить аккаунт" class="c-button" type="submit" />
            </form>
        </div>
    </div>
    
</bode>