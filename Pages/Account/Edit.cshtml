@page
@model Web2.Pages.EditModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Edit";
}

<body>

    <h1>Редактирование</h1>

    <h4>Личные данные</h4>
    <hr />

    <div class="row">
        <div class="col-md-7">
            <form asp-page-handler="edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="user.Id" />
                <div class="form-group">
                    <label>Имя</label>
                    <input asp-for="user.Name" class="form-control" />
                    <span asp-validation-for="user.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Фамилия</label>
                    <input asp-for="user.Surname" class="form-control" />
                    <span asp-validation-for="user.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Номер телефона</label>
                    <input type="tel" asp-for="user.Phone" class="form-control" />
                    <span asp-validation-for="user.Phone" class="text-danger"></span>
                </div>
                <p>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </p>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
